{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended",
        "next/core-web-vitals",
        "prettier"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {
                "react-hooks/exhaustive-deps": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/no-restricted-paths": [
            "error",
            {
                "zones": [
                    {
                        "target": "./src/core",
                        "from": "./src/components"
                    },
                    {
                        "target": "./src/core",
                        "from": "./src/lib"
                    },
                    {
                        "target": "./src/core",
                        "from": "./src/app"
                    },
                    {
                        "target": "./src/lib",
                        "from": "./src/app"
                    },
                    {
                        "target": "./src/components",
                        "from": "./src/app"
                    }
                ]
            }
        ]
    }
}